{
  "name": "backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/backend/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/backend",
        "main": "apps/backend/src/main.ts",
        "tsConfig": "apps/backend/tsconfig.app.json",
        "assets": ["apps/backend/src/assets"],
        "webpackConfig": "apps/backend/webpack.config.js",
        "transformers": [
          "typia/lib/transform",
          {
            "name": "@nestia/core/lib/transform",
            "options": {
              "validate": "assert",
              "stringify": "assert"
            }
          }
        ]
      },
      "dependsOn": ["generate-prisma"],
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "backend:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "backend:build:development"
        },
        "production": {
          "buildTarget": "backend:build:production"
        }
      },
      "dependsOn": ["generate-prisma", "generate-swagger"]
    },
    "generate-swagger": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "npx nestia swagger"
          }
        ],
        "cwd": "apps/backend"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "generate-prisma": {
      "executor": "@nx-tools/nx-prisma:generate",
      "options": {
        "schema": "apps/backend/prisma/schema.prisma",
        "prismaSchema": "apps/backend/prisma/schema.prisma",
        "prismaBinaryTarget": "native",
        "output": "apps/backend/src/generated",
        "transpile": true,
        "rejectOnFail": true
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/backend/jest.config.ts"
      },
      "dependsOn": ["generate-prisma"]
    }
  },
  "tags": []
}
